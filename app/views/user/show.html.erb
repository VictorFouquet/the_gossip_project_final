<head>
<title>The Gossip Project</title>
</head>
	<center>
	<body>
	<div>
	<% if @user == current_user %>
			<div class="card" style="width: 70%; padding: 5%; margin-top: 2rem">
			<h4><%= @user.first_name + " " + @user.last_name %></h4>
				<p>
					Description :<br/>
					<%= @user.description %>
					<br><br>
					Ville : <%= link_to @user.city.name, city_path(@user.city.id) %>
					<br/>
					Age : <%= @user.age %> ans 
					<br/>
					<%= link_to "Messages", user_private_message_index_path(current_user.id) %>
				</p>
			</div>

	<% else %>	
		<div class="card" style="width: 70%; padding: 5%; margin-top: 2rem">
			<h4><%= @user.first_name + " " + @user.last_name %></h4>
				<p>
					Description :<br/>
					<%= @user.description %>
					<br><br>
					Ville : <%= link_to @user.city.name, city_path(@user.city.id) %>
					<br/>
					Age : <%= @user.age %> ans 
					<br/>
					<%= link_to "Envoyer un message", user_private_message_path(user_id: current_user.id, id: @user.id) %>
				</p>
			</div>
	<% end %>

	<div class="card" style="width: 60%; padding: 1%; margin: 2%; background-color: #e8f4f8">
			<% @user.gossips.each do |gossip| %>
				<center>
				<div class="card" style="width: 90%; margin: 2%">
 					<div class="card-body">
    					<%= link_to gossip.title, gossip_path(gossip.id) %>
		    	</div>
		    </div>
		    	</center>
			<% end %>
		</div>
	</div>

	</body>
	</center>